{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/index.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 60
      }
    },
    {
      "src": "backend/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/index.js",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/(.*\\..+)",
      "dest": "backend/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "backend/public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "backend/src/index.js": {
      "maxDuration": 60,
      "memory": 1024
    }
  }
}
