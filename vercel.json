{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "backend/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/index.js"
    },
    {
      "src": "/(.*\\..+)",
      "dest": "backend/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "backend/public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
